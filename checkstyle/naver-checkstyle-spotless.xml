<?xml version="1.0" encoding="UTF-8"?>
<profiles version="12">
    <profile name="Naver-coding-convention-v1.2" version="12">
        <!-- 오른쪽 여백 -->
        <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="120"/>
        <!-- import order: 빈 항목은 빈 문자열로 표현하며, 순서와 그룹 사이에 콤마를 사용 -->
        <!-- 아래 값은 IntelliJ 설정의 순서를 참고하여 작성한 예시입니다 -->
        <setting id="org.eclipse.jdt.core.formatter.import_order"
                 value=",java,javax,org,net,com,,com.nhncorp,com.navercorp,com.naver"/>
        <!-- 클래스 및 이름이 많을 때 와일드카드 import 기준 (Eclipse에서는 별도 설정 없이 위 import_order로 처리됨) -->

        <!-- Javadoc 포매팅 사용 여부 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.format_javadoc_comment" value="false"/>

        <!-- 블록 주석 포매팅 (필요에 따라 추가) -->
        <setting id="org.eclipse.jdt.core.formatter.comment.format_block_comment" value="false"/>

        <!-- 들여쓰기 설정 -->
        <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>
        <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="tab"/>
        <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>

        <!-- 기타 필요한 Eclipse formatter 설정들을 추가할 수 있습니다 -->
    </profile>
</profiles>